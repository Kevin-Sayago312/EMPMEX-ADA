{% extends 'base.html.twig' %}

{% block title %}Mis Pedidos{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Mis Pedidos</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Fecha de Pedido</th>
                                    <th>Total</th>
                                    <th>Pago</th>
                                    <th>Estado de Envío</th>
                                    <th>Producto</th>
                                    <th>Descripción</th>
                                    <th>Estatus de Pago</th>
                                    <th>Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for pedido in pedidos %}
                                    <tr>
                                        <td>{{ pedido.id }}</td>
                                        <td>{{ pedido.fechaPedido|date('d/m/Y H:i') }}</td>
                                        <td>${{ pedido.total }}</td>
                                        <td>{{ pedido.pago }}</td>
                                        <td>{{ pedido.estadoEnvio }}</td>
                                        <td>{{ pedido.nombreProducto }}</td>
                                        <td>{{ pedido.descripcionProducto }}</td>
                                        <td>{{ pedido.estatusPago }}</td>
                                        <td>{{ pedido.cantidad }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
