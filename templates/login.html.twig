<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EMPMEX-ADA</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="assets/css/styles.css" />
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="assets/img/favicon.png" />
    <!-- google font -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap"
      rel="stylesheet"
    />
    <!-- fontawesome -->
    <link rel="stylesheet" href="/assets/css/all.min.css" />
    <!-- bootstrap -->
    <link rel="stylesheet" href="assets/bootstrap/css/bootstrap.min.css" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="assets/css/owl.carousel.css" />
    <!-- magnific popup -->
    <link rel="stylesheet" href="assets/css/magnific-popup.css" />
    <!-- animate css -->
    <link rel="stylesheet" href="assets/css/animate.css" />
    <!-- mean menu css -->
    <link rel="stylesheet" href="assets/css/meanmenu.min.css" />
    <!-- main style -->
    <link rel="stylesheet" href="assets/css/main.css" />
    <!-- responsive -->
    <link rel="stylesheet" href="assets/css/responsive.css" />
    <!-- iconos de bootstrap -->
    <link rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"">
  </head>
  <body>
    <main>
      <div class="contenedor_todo">

        <!-- EMPIEZA CAJA TRASERA -->
        <div class="caja_trasera">
          <!-- Fondo trasero del Login -->
          <div class="caja_trasera-login">
            <h3>¿Ya tienes una cuenta?</h3>
            <img src="assets/img/login_register/login_fondo-removebg-preview.png" class="" />
            <p class="parrafo_caja_trasera">¡Inicia Sesion ahora!</p>
            <button id="btn_iniciar-sesion">Iniciar Sesión</button>
          </div>
          <!-- Fondo trasero del Registro -->
          <div class="caja_trasera-register">
            <h3>¿Aún no tienes una cuenta?</h3>
            <img src="assets/img/login_register/register_fondo-removebg-preview.png" class="" />
            <p class="parrafo_caja_trasera">¡Regístrate ahora mismo!</p>
            <button id="btn_registrarse">Registrarse</button>
          </div>
        </div>
        <!-- TERMINA CAJA TRASERA -->

        <!-- Contenido de los Formularios -->
        <div class="contenedor_login-register">
          <!-- Contenido del Formulario de Inicio de Sesion -->
          <form action="" class="formulario_login">
            <img src="assets/img/login_register/login.png" class="" />
            <h2 class="text-center">Iniciar Sesión</h2>

            <div class="input-field">
              <i class="bi bi-person-fill"></i>
              <input type="text" placeholder="Correo Electronico"/>
            </div>

            <div class="input-field">
              <i class="bi bi-lock-fill"></i>
              <input type="password" placeholder="Contraseña"/>
            </div>
            <p class="social-text text-center">Inicia sesión con tus redes sociales</p>
            <div class="social-icon">
                <!-- EMPIEZA ICONOS REDES SOCIALES -->
                <a href="#" class="social-icon_2"> <i class="bi bi-facebook"></i> </a>
                <a href="#" class="social-icon_2"> <i class="bi bi-google"></i> </a>
                <a href="#" class="social-icon_2"> <i class="bi bi-twitter-x"></i> </a>
                <!-- TERMINA ICONOS REDES SOCIALES -->
            </div>
            <button class="btn_2" id="btn_Entrar">Entrar</button>
          </form>

          <!-- Contenido del Formulario de Registro -->
          <form action="" class="formulario_register">
            <img src="assets/img/login_register/register.png" class="" />
            <h2 class="text-center">Registrarse</h2>

            <div class="input-field">
                <i class="bi bi-envelope"></i>
                <input type="text" placeholder="Correo Electronico"/>
            </div>
            <div class="input-field">
                <i class="bi bi-person-fill"></i>
                <input type="text" placeholder="Nombre completo"/>
              </div>
              <div class="input-field">
                <i class="bi bi-lock-fill"></i>
                <input type="password" placeholder="Contraseña"/>
              </div>
              <p class="social-text text-center">Registrate con tus redes sociales</p>
            <div class="social-icon">
                <a href="#" class="social-icon_2"> <i class="bi bi-facebook"></i> </a>
                <a href="#" class="social-icon_2"> <i class="bi bi-google"></i> </a>
                <a href="#" class="social-icon_2"> <i class="bi bi-twitter-x"></i> </a>
            </div>
            <button class="btn_2">Registrarse</button>
          </form>
        </div>
      </div>
    </main>
    <script src="assets/js/script_login.js"></script>
    <!-- jquery -->
    <script src="assets/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <!-- count down -->
    <script src="assets/js/jquery.countdown.js"></script>
    <!-- isotope -->
    <script src="assets/js/jquery.isotope-3.0.6.min.js"></script>
    <!-- waypoints -->
    <script src="assets/js/waypoints.js"></script>
    <!-- owl carousel -->
    <script src="assets/js/owl.carousel.min.js"></script>
    <!-- magnific popup -->
    <script src="assets/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="assets/js/jquery.meanmenu.min.js"></script>
    <!-- sticker js -->
    <script src="assets/js/sticker.js"></script>
    <!-- main js -->
    <script src="assets/js/main.js"></script>

    <script>
      document.addEventListener("DOMContentLoaded", function() {
        document.getElementById("btn_Entrar").addEventListener("click", function(event) {
          event.preventDefault(); // Evitar el comportamiento predeterminado del botón
          console.log("Click en el botón");
          window.location.href = "index.html"; // Redirigir a la página index.html
        });
      });
      </script>
  </body>
</html>
