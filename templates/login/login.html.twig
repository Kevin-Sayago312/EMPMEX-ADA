{% extends 'base_login.html.twig' %}

{% block title %} {{parent()}} - Login{% endblock %}

{% block body %}
      {{parent()}}
      <div class="contenedor_todo">
        <!-- EMPIEZA CAJA TRASERA -->
        <div class="caja_trasera">
          <!-- Fondo trasero del Login -->
          <div class="caja_trasera-login">
            <h3>¿Ya tienes una cuenta?</h3>
            <img src="assets/img/login_register/login_fondo-removebg-preview.png" class="" />
            <p class="parrafo_caja_trasera">¡Inicia Sesion ahora!</p>
            <button id="btn_iniciar-sesion">Iniciar Sesión</button>
          </div>
          <!-- Fondo trasero del Registro -->
          <div class="caja_trasera-register">
            <h3>¿Aún no tienes una cuenta?</h3>
            <img src="assets/img/login_register/register_fondo-removebg-preview.png" class="" />
            <p class="parrafo_caja_trasera">¡Regístrate ahora mismo!</p>
            <button id="btn_registrarse">Registrarse</button>
          </div>
        </div>
        <!-- TERMINA CAJA TRASERA -->

        <!-- Contenido de los Formularios -->
       <div class="contenedor_login-register">
    <form action="{{ path('app_login') }}" method="post" class="formulario_login">
        <img src="{{ asset('assets/img/login_register/login.png') }}" class="" />
        <h2 class="text-center">Iniciar Sesión</h2>

        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <div class="input-field">
            <i class="bi bi-person-fill"></i>
            <input type="text" name="username" value="{{ last_username }}" placeholder="Correo Electrónico" required="required" autocomplete="email"/>
        </div>

        <div class="input-field">
            <i class="bi bi-lock-fill"></i>
            <input type="password" name="password" placeholder="Contraseña" required="required" autocomplete="current-password"/>
        </div>

        <input type="hidden" name="_target_path" value="/"/>
        <button class="btn_2" type="submit" id="btn_Entrar">Entrar</button>
    </form>

    

    <form action="{{ path('registrar_usuario') }}" class="formulario_register" method="post">
        <img src="assets/img/login_register/register.png" class="" />
        <h2 class="text-center">Registrarse</h2>
        {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
        <div class="input-field">
            <i class="bi bi-envelope"></i>
            <input type="text" name="email" placeholder="Correo Electronico"/>
        </div>
        <div class="input-field">
            <i class="bi bi-person-fill"></i>
            <input type="text" name="nombre" placeholder="Nombre completo"/>
        </div>
        <div class="input-field">
            <i class="bi bi-lock-fill"></i>
            <input type="password" name="password" placeholder="Contraseña"/>
        </div>
        <button type="submit" class="btn_2">Registrarse</button>
    </form>
</div>



{% endblock %}
